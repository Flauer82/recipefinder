<h1>Recipes</h1>

<h1>Searching for - <%= @search_term %></h1>

<table border="1">
  <tr>
    <th>Thumbnail</th>
    <th>Title</th>
    <th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><%= link_to(image_tag(recipe["image_url"], size: "100x100", alt: "Recipe Thumb"), recipe["source_url"], id: "thumbnail", class: "thumbnail")%></td>
      <td><%= link_to(sanitize(recipe["title"]), recipe["source_url"])%></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>
